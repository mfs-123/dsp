clc;
clear all;
close all;
x=input('Enter the elements: ');
t=0:length(x)-1;
subplot(3,1,1);
stem(t,x);
h=input('Enter the elements: ');
t1=0:length(h)-1;
xlabel('time')
ylabel('Amplitude')
subplot(3,1,2);
stem(t1,h);
y=conv(x,h);
xlabel('time')
ylabel('Amplitude')
t2=0:length(y)-1;
subplot(3,1,3);
stem(t2,y);
xlabel('time')
ylabel('Amplitude')
disp('convolution of given input is:Â ');
disp(y);
